- if @related_branches.any?
  %h2.related-branches-title
    = pluralize(@related_branches.size, 'Related Branch')
  %ul.unstyled-list.related-merge-requests
    - @branch_info.each do |branch|
      %li
        - if can?(current_user, :read_pipeline, branch[:pipeline])
          %span.related-branch-ci-status
            = render 'ci/status/icon', status: branch[:pipeline].detailed_status(current_user)
        %span.related-branch-info
          %strong
            = link_to branch[:name], project_compare_path(@project, from: @project.default_branch, to: branch[:name]), class: "ref-name"
