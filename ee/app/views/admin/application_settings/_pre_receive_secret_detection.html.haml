= gitlab_ui_form_for @application_setting, url: general_admin_application_settings_path(anchor: 'js-secret-detection-settings'), html: { class: 'fieldset-form', id: 'secret-detection-settings' } do |f|
  = form_errors(@application_setting)

  %fieldset
    .form-group
      = f.label :pre_receive_secret_detection_enabled, s_('AdminSettings|Pre-receive secret detection'), class: 'label-bold gl-mb-0'
      %span.form-text.gl-mt-0.gl-mb-3#pre_receive_secret_detection-help
        = _('Minimize the risk of secrets from being committed to any repository in this GitLab instance.')
      = f.gitlab_ui_checkbox_component :pre_receive_secret_detection_enabled, _('Enable pre-receive secret detection')
  = f.submit _('Save changes'), pajamas_button: true
